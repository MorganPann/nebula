<a
  href="<%= entity_path(uri: result["id"]) %>"
  class="
    list-group-item list-group-item-action <%= 'active  aria-current="true"' if result["match"] == true %>
  "
>
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1">
      <%= result["name"] %>
    </h5>
    <% if result["id"].starts_with?("K") %>
      <small>
        <%= result["id"] %></small>
    <% end %>
  </div>
  <p class="mb-1">
    <%= result["type"].first["name"] %>
    <% if result["description"] != "" %>
      -
      <%= result["description"] %>
    <% end %>
    <% if !result["id"].starts_with?("K") %>
      <span class='fw-lighter'>
        -
        <%= result["id"] %>
      </span>
    <% end %>
    <% if @externalUri %>
      <%= link_to "link",
      mint_link_path(
        externalUri: @externalUri,
        classToMint: result["type"].first["id"],
        adUri: "http://kg.artsdata.ca/resource/" + result["id"],
      ),
      class: "btn btn-tiny btn-danger" %>
    <% end %>
  </p>

</a>
