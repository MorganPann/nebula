<div class="container">
  <% if session[:name] %>
    <h3>
      <%= t("dashboard_title") %>
      <%= session[:name] %>
    </h3>
    <hr>
    <h4>
      Favourite Reports
    </h4>
    <ul>
      <li>
        <%= link_to "All Data Feeds",
        query_show_path(sparql: "feeds_all", title: "Data Feeds") %>
      </li>
      <li>
        <%= link_to "Recently Minted Events",
        query_show_path(
          sparql: "custom/recent_event_mints",
          title: "Recently Minted Events",
        ) %>
      </li>
      <li>
        <%= link_to "CMS Event Mismatches",
        query_show_path(
          sparql: "custom/cms-event-start-date-mismatch",
          title: "CMS Event Mismatches",
        ) %>
      </li>

      <li>
        <%= link_to "ADC Member Table",
        query_show_path(sparql: "custom/adc-members", title: "ADC Member Table") %>
      </li>
      <li>
        <%= link_to "Ville-de-Laval events to mint",
        query_show_path(
          sparql: "custom/ville-de-laval",
          title: "Ville-de-Laval events to mint",
        ) %>
      </li>
    </ul>
    <h4>
      Favourite Workflows
    </h4>
    <turbo-frame
      id='workflows'
      src="<%= github_workflows_path %>"
      loading="lazy"
      target="_blank"
    >
      loading...
    </turbo-frame>
    <hr>
  <% end %>
  <% if I18n.locale == :fr %>
    <%= render partial: "/home-fr" %>
  <% else %>
    <%= render partial: "/home-en" %>
  <% end %>

</div>
